<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ning.entity.dao.AdminDao">

    <resultMap type="com.ning.entity.entity.Admin" id="AdminMap">
        <result property="adminid" column="adminId" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="rank" column="rank" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AdminMap">
        select
          adminId, name, password, rank
        from admin
        where adminId = #{adminid}
    </select>



    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from admin
        <where>
            <if test="adminid != null and adminid != ''">
                and adminId = #{adminid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="rank != null and rank != ''">
                and rank = #{rank}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="adminid" useGeneratedKeys="true">
        insert into admin(name, password, rank)
        values (#{name}, #{password}, #{rank})
    </insert>



    <!--通过主键修改数据-->
    <update id="update">
        update admin
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="rank != null and rank != ''">
                rank = #{rank},
            </if>
        </set>
        where adminId = #{adminid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from admin where adminId = #{adminid}
    </delete>

</mapper>

